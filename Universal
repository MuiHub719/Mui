-- Create Toggle GUI
local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local toggleGui = Instance.new("ScreenGui", playerGui)
toggleGui.Name = "ToggleGui"
toggleGui.ResetOnSpawn = false

local toggleButton = Instance.new("TextButton", toggleGui)
toggleButton.Size = UDim2.new(0, 150, 0, 50)
toggleButton.Position = UDim2.new(0, 20, 0.5, -25)
toggleButton.Text = "Open MUI HUB"
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.Active = true
toggleButton.Draggable = true
Instance.new("UICorner", toggleButton).CornerRadius = UDim.new(0, 8)

-- Create Main GUI
local mainGui = Instance.new("ScreenGui", playerGui)
mainGui.Name = "MUIHub"
mainGui.Enabled = false
mainGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame", mainGui)
mainFrame.Size = UDim2.new(0, 400, 0, 360)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -180)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 8)

-- Title with RGB
local title = Instance.new("TextLabel", mainFrame)
title.Text = "MUI HUB"
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24

spawn(function()
    while true do
        for i = 0, 1, 0.01 do
            title.TextColor3 = Color3.fromHSV(i, 1, 1)
            wait()
        end
    end
end)

-- Close Button (DESTROYS)
local closeButton = Instance.new("TextButton", mainFrame)
closeButton.Text = "X"
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -30, 0, 0)
closeButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.MouseButton1Click:Connect(function()
    mainGui:Destroy()
    toggleGui:Destroy()
end)

-- Scrollable container for game buttons
local scrollFrame = Instance.new("ScrollingFrame", mainFrame)
scrollFrame.Name = "GameList"
scrollFrame.Position = UDim2.new(0, 20, 0, 50)
scrollFrame.Size = UDim2.new(1, -40, 1, -60)
scrollFrame.BackgroundTransparency = 1
scrollFrame.ScrollBarThickness = 6
scrollFrame.ClipsDescendants = true
scrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y

local grid = Instance.new("UIGridLayout", scrollFrame)
grid.CellSize = UDim2.new(0, 160, 0, 40)
grid.CellPadding = UDim2.new(0, 20, 0, 20)
grid.SortOrder = Enum.SortOrder.LayoutOrder

-- List of games
local games = {
    "GROW A GARDEN",
    "FISCH",
    "BLADE BALL",
    "BLOX FRUITS",
    "DEAD RAILS",
    "BLUE LOCK: RIVALS",
    "Universal Scripts",
    "Universal Hubs",
    "Any DH Games"
}

-- Create game buttons
for i, gameName in ipairs(games) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.Text = gameName
    btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 18
    btn.LayoutOrder = i
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    btn.Parent = scrollFrame

    btn.MouseButton1Click:Connect(function()
        -- Remove old sub‐GUI
        if mainFrame:FindFirstChild("GameSubGui") then
            mainFrame.GameSubGui:Destroy()
        end

        -- Sub‐GUI container
        local subGui = Instance.new("Frame", mainFrame)
        subGui.Name = "GameSubGui"
        subGui.Size = UDim2.new(0, 300, 0, 200)
        subGui.Position = UDim2.new(0.5, -150, 0.5, -100)
        subGui.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        subGui.Active = true
        subGui.Draggable = true
        Instance.new("UICorner", subGui).CornerRadius = UDim.new(0, 8)

        -- Close sub‐GUI
        local closeSub = Instance.new("TextButton", subGui)
        closeSub.Text = "X"
        closeSub.Size = UDim2.new(0, 30, 0, 30)
        closeSub.Position = UDim2.new(1, -30, 0, 0)
        closeSub.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
        closeSub.TextColor3 = Color3.fromRGB(255, 255, 255)
        closeSub.MouseButton1Click:Connect(function()
            subGui:Destroy()
        end)

        -- Helper to add script buttons
        local function addScriptButton(text, yPos, action)
            local b = Instance.new("TextButton", subGui)
            b.Size = UDim2.new(0, 260, 0, 40)
            b.Position = UDim2.new(0, 20, 0, yPos)
            b.Text = text
            b.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            b.TextColor3 = Color3.fromRGB(255, 255, 255)
            b.Font = Enum.Font.SourceSansBold
            b.TextSize = 18
            Instance.new("UICorner", b).CornerRadius = UDim.new(0, 6)
            b.MouseButton1Click:Connect(action)
        end

        -- Populate based on selection
        if gameName == "DEAD RAILS" then
            addScriptButton("Null-Fire",          40, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/InfernusScripts/Null-Fire/main/Loader"))()
            end)
            addScriptButton("Toggleable Aimlock", 90, function()
                loadstring(game:HttpGet("https://rawscripts.net/raw/Dead-Rails-Alpha-Alpha-Aimbot-with-bind-30004"))()
            end)
            addScriptButton("OP Auto Bonds",     140, function()
                getgenv().BondFarmSetting = {
                    tweenDuration = 20,
                    AutoExecute = true,
                    queue_on_teleport = true,
                    CheckMissedBonds = true
                }
                loadstring(game:HttpGet("https://raw.githubusercontent.com/DonjoScripts/Public-Scripts/refs/heads/Slap-Battles/TheFastestBondStealer.lua"))()
            end)

        elseif gameName == "BLADE BALL" then
            addScriptButton("OP Auto Parry & Auto Spam", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Zypherion-X19/Zy/refs/heads/main/Blade-Ball.lua"))()
            end)

        elseif gameName == "GROW A GARDEN" then
            addScriptButton("Ronix", 50, function()
                loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/a8f02a61fc38bf9256dd0f17be6b16d7.lua"))()
            end)

        elseif gameName == "FISCH" then
            addScriptButton("Nathub",    50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/ArdyBotzz/NatHub/refs/heads/master/NatHub.lua"))()
            end)
            addScriptButton("Beecon Hub",100, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/BaconBossScript/BeeconHub/main/BeeconHub"))()
            end)

        elseif gameName == "BLOX FRUITS" then
            addScriptButton("Vxeze", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Dex-Bear/Vxezehub/refs/heads/main/VxezeHubMain"))()
            end)

        elseif gameName == "BLUE LOCK: RIVALS" then
            addScriptButton("Fearise Hub", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/EnesXVC/Games-Scripts/main/Blue-Lock-Fearise-Hub"))()
            end)

        elseif gameName == "Universal Scripts" then
            addScriptButton("Infinite Yield", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
            end)

        elseif gameName == "Universal Hubs" then
            addScriptButton("Ghost Hub", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/GhostPlayer352/Test4/main/GhostHub"))()
            end)

        elseif gameName == "Any DH Games" then
            addScriptButton("Camlock",    50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/CookieScript/Fixscript/refs/heads/main/Psalmsfix"))()
            end)
            addScriptButton("Silent Aim", 100, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/DaddyFelixFucks/TappingSilent/refs/heads/main/SilentAim", true))()
            end)
        end
    end)
end

-- Toggle main GUI on/off
local isOpen = false
toggleButton.MouseButton1Click:Connect(function()
    isOpen = not isOpen
    mainGui.Enabled = isOpen
end)
