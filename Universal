-- Create Toggle GUI
local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local toggleGui = Instance.new("ScreenGui", playerGui)
toggleGui.Name = "ToggleGui"
toggleGui.ResetOnSpawn = false

local toggleButton = Instance.new("TextButton", toggleGui)
toggleButton.Size = UDim2.new(0, 150, 0, 50)
toggleButton.Position = UDim2.new(0, 20, 0.5, -25)
toggleButton.Text = "Open MUI HUB"
toggleButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
toggleButton.TextColor3 = Color3.fromRGB(240, 240, 240)
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 18
toggleButton.AutoButtonColor = false
toggleButton.Active = true
toggleButton.Draggable = true
Instance.new("UICorner", toggleButton).CornerRadius = UDim.new(0, 12)
do
    local stroke = Instance.new("UIStroke", toggleButton)
    stroke.Color = Color3.fromRGB(80, 80, 80)
    stroke.Thickness = 2
end

-- Create Main GUI
local mainGui = Instance.new("ScreenGui", playerGui)
mainGui.Name = "MUIHub"
mainGui.Enabled = false
mainGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame", mainGui)
mainFrame.Size = UDim2.new(0, 420, 0, 420)
mainFrame.Position = UDim2.new(0.5, -210, 0.5, -210)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 16)
do
    local stroke = Instance.new("UIStroke", mainFrame)
    stroke.Color = Color3.fromRGB(65, 65, 65)
    stroke.Thickness = 2
end

-- Header
local header = Instance.new("Frame", mainFrame)
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundTransparency = 1
local grad = Instance.new("UIGradient", header)
grad.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 100, 100)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 200, 100))
}
grad.Rotation = 90

local title = Instance.new("TextLabel", header)
title.Text = "MUI HUB"
title.Size = UDim2.new(1, 0, 1, 0)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(240, 240, 240)  -- Default white for dark mode
title.Font = Enum.Font.GothamBlack
title.TextSize = 24

-- Close Button (DESTROYS)
local closeButton = Instance.new("TextButton", header)
closeButton.Text = "âœ•"
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 18
closeButton.AutoButtonColor = false
Instance.new("UICorner", closeButton).CornerRadius = UDim.new(0, 8)
closeButton.MouseButton1Click:Connect(function()
    mainGui:Destroy()
    toggleGui:Destroy()
end)

-- Theme toggle
local themeBtn = Instance.new("TextButton", header)
themeBtn.Size = UDim2.new(0, 60, 0, 30)
themeBtn.Position = UDim2.new(0, 10, 0, 5)
themeBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
themeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
themeBtn.Font = Enum.Font.GothamSemibold
themeBtn.TextSize = 16
Instance.new("UICorner", themeBtn).CornerRadius = UDim.new(0, 6)

local darkTheme = true
themeBtn.Text = "Light"

themeBtn.MouseButton1Click:Connect(function()
    darkTheme = not darkTheme
    if darkTheme then
        mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
        title.TextColor3 = Color3.fromRGB(240, 240, 240)  -- White text for dark
        themeBtn.Text = "Light"
    else
        mainFrame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
        title.TextColor3 = Color3.fromRGB(0, 0, 0)        -- Black text for light
        themeBtn.Text = "Dark"
    end
end)

-- Scrollable container for game buttons
local scrollFrame = Instance.new("ScrollingFrame", mainFrame)
scrollFrame.Name = "GameList"
scrollFrame.Position = UDim2.new(0, 20, 0, 50)
scrollFrame.Size = UDim2.new(1, -40, 1, -70)
scrollFrame.BackgroundTransparency = 1
scrollFrame.ScrollBarThickness = 6
scrollFrame.ClipsDescendants = true
scrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y

local grid = Instance.new("UIGridLayout", scrollFrame)
grid.CellSize = UDim2.new(0, 180, 0, 50)
grid.CellPadding = UDim2.new(0, 15, 0, 15)
grid.SortOrder = Enum.SortOrder.LayoutOrder

-- Game list
local games = {
    "GROW A GARDEN",
    "FISCH",
    "BLADE BALL",
    "BLOX FRUITS",
    "DEAD RAILS",
    "BLUE LOCK: RIVALS",
    "Universal Scripts",
    "Universal Hubs",
    "Any DH Games"
}

-- Utility: notification
local function notify(msg)
    game.StarterGui:SetCore("SendNotification", {
        Title = "MUI HUB";
        Text = msg;
        Duration = 2;
    })
end

-- Helper to add script buttons
local function addScriptButton(parent, text, yPos, action)
    local b = Instance.new("TextButton", parent)
    b.Size = UDim2.new(0, 260, 0, 40)
    b.Position = UDim2.new(0, 20, 0, yPos)
    b.Text = text
    b.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.GothamSemibold
    b.TextSize = 18
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 6)
    b.MouseButton1Click:Connect(function()
        notify(text .. " Running...")
        wait(2)
        action()
        notify(text .. " Loaded!")
    end)
end

-- Create game buttons
for i, gameName in ipairs(games) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 50)
    btn.Text = gameName
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    btn.TextColor3 = Color3.fromRGB(230, 230, 230)
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 18
    btn.AutoButtonColor = false
    btn.LayoutOrder = i
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 12)
    Instance.new("UIStroke", btn).Thickness = 1
    btn.Parent = scrollFrame

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    end)

    btn.MouseButton1Click:Connect(function()
        if mainFrame:FindFirstChild("GameSubGui") then
            mainFrame.GameSubGui:Destroy()
        end
        local sub = Instance.new("Frame", mainFrame)
        sub.Name = "GameSubGui"
        sub.Size = UDim2.new(0, 300, 0, 200)
        sub.Position = UDim2.new(0.5, -150, 0.5, -100)
        sub.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        sub.Active = true
        sub.Draggable = true
        Instance.new("UICorner", sub).CornerRadius = UDim.new(0, 8)

        local closeSub = Instance.new("TextButton", sub)
        closeSub.Text = "X"
        closeSub.Size = UDim2.new(0, 30, 0, 30)
        closeSub.Position = UDim2.new(1, -30, 0, 0)
        closeSub.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
        closeSub.TextColor3 = Color3.fromRGB(255, 255, 255)
        Instance.new("UICorner", closeSub).CornerRadius = UDim.new(0, 6)
        closeSub.MouseButton1Click:Connect(function()
            sub:Destroy()
        end)

        -- Populate scripts
        if gameName == "DEAD RAILS" then
            addScriptButton(sub, "Null-Fire", 40, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/InfernusScripts/Null-Fire/main/Loader"))()
            end)
            addScriptButton(sub, "Toggleable Aimlock", 90, function()
                loadstring(game:HttpGet("https://rawscripts.net/raw/Dead-Rails-Alpha-Alpha-Aimbot-with-bind-30004"))()
            end)
            addScriptButton(sub, "OP Auto Bonds", 140, function()
                getgenv().BondFarmSetting = {
                    tweenDuration = 20,
                    AutoExecute = true,
                    queue_on_teleport = true,
                    CheckMissedBonds = true
                }
                loadstring(game:HttpGet("https://raw.githubusercontent.com/DonjoScripts/Public-Scripts/refs/heads/Slap-Battles/TheFastestBondStealer.lua"))()
            end)

        elseif gameName == "BLADE BALL" then
            addScriptButton(sub, "OP Auto Parry & Auto Spam", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Zypherion-X19/Zy/refs/heads/main/Blade-Ball.lua"))()
            end)

        elseif gameName == "GROW A GARDEN" then
            addScriptButton(sub, "Ronix", 50, function()
                loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/a8f02a61fc38bf9256dd0f17be6b16d7.lua"))()
            end)

        elseif gameName == "FISCH" then
            addScriptButton(sub, "Nathub", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/ArdyBotzz/NatHub/refs/heads/master/NatHub.lua"))()
            end)
            addScriptButton(sub, "Beecon Hub", 100, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/BaconBossScript/BeeconHub/main/BeeconHub"))()
            end)

        elseif gameName == "BLOX FRUITS" then
            addScriptButton(sub, "Vxeze", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/Dex-Bear/Vxezehub/refs/heads/main/VxezeHubMain"))()
            end)

        elseif gameName == "BLUE LOCK: RIVALS" then
            addScriptButton(sub, "Fearise Hub", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/EnesXVC/Games-Scripts/main/Blue-Lock-Fearise-Hub"))()
            end)

        elseif gameName == "Universal Scripts" then
            addScriptButton(sub, "Infinite Yield", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
            end)

        elseif gameName == "Universal Hubs" then
            addScriptButton(sub, "Ghost Hub", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/GhostPlayer352/Test4/main/GhostHub"))()
            end)

        elseif gameName == "Any DH Games" then
            addScriptButton(sub, "Camlock", 50, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/CookieScript/Fixscript/refs/heads/main/Psalmsfix"))()
            end)
            addScriptButton(sub, "Silent Aim", 100, function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/DaddyFelixFucks/TappingSilent/refs/heads/main/SilentAim", true))()
            end)
        end
    end)
end

-- Toggle main GUI on/off
local isOpen = false
toggleButton.MouseButton1Click:Connect(function()
    isOpen = not isOpen
    mainGui.Enabled = isOpen
end)
